{
  "verbose": 2,
  "hooks": {
    "before:init": ["pnpm run clean", "pnpm install", "npm run build"]
  },
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "requireBranch": "next",
    "commit": true,
    "commitMessage": "chore(release): ${version}",
    "tag": true,
    "push": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": true,
    "draft": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "types": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {}
      ]
    }
  }
}
